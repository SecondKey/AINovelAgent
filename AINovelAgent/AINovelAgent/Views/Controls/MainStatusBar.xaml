<UserControl x:Class="AINovelAgent.Views.Controls.MainStatusBar"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d">
	<StatusBar>
		<StatusBarItem>
			<TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=StatusText}" />
		</StatusBarItem>
		<StatusBarItem>
			<ProgressBar Width="120" Height="16" Minimum="0" Maximum="100" IsIndeterminate="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=IsProgressIndeterminate}" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ProgressValue}" />
		</StatusBarItem>
		<StatusBarItem>
			<TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=SystemStatusText}" />
		</StatusBarItem>
		<StatusBarItem HorizontalAlignment="Right">
			<TextBlock Text="里程碑 1-1" />
		</StatusBarItem>
	</StatusBar>
</UserControl>
