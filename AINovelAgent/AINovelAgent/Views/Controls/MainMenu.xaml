<UserControl x:Class="AINovelAgent.Views.Controls.MainMenu"
		 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		 xmlns:local="clr-namespace:AINovelAgent.Views.Controls"
		 xmlns:commands="clr-namespace:AINovelAgent.Commands.Definitions"
		 xmlns:hc="https://handyorg.github.io/handycontrol"
		 mc:Ignorable="d">
	<Grid>
		<Menu Background="{DynamicResource RegionBrush}" 
			  BorderBrush="{DynamicResource BorderBrush}">
			<MenuItem Header="_文件(_F)">
				<MenuItem Header="新建(_N)" InputGestureText="Ctrl+N" Command="{x:Static commands:FileCommands.New}" />
				<MenuItem Header="打开...(_O)" InputGestureText="Ctrl+O" Command="{x:Static commands:FileCommands.Open}" />
				<Separator />
				<MenuItem Header="保存(_S)" InputGestureText="Ctrl+S" Command="{x:Static commands:FileCommands.Save}" />
				<MenuItem Header="另存为...(_A)" InputGestureText="Ctrl+Shift+S" Command="{x:Static commands:FileCommands.SaveAs}" />
				<Separator />
				<MenuItem Header="最近项目(_R)">
					<MenuItem Header="(空)" IsEnabled="False" />
				</MenuItem>
				<Separator />
				<MenuItem Header="退出(_X)" InputGestureText="Alt+F4" Command="{x:Static commands:FileCommands.Exit}" />
			</MenuItem>
			<MenuItem Header="_编辑(_E)">
				<MenuItem Header="撤销(_U)" InputGestureText="Ctrl+Z" Command="{x:Static commands:EditCommands.Undo}" />
				<MenuItem Header="重做(_R)" InputGestureText="Ctrl+Y" Command="{x:Static commands:EditCommands.Redo}" />
				<Separator />
				<MenuItem Header="剪切(_T)" InputGestureText="Ctrl+X" Command="{x:Static commands:EditCommands.Cut}" />
				<MenuItem Header="复制(_C)" InputGestureText="Ctrl+C" Command="{x:Static commands:EditCommands.Copy}" />
				<MenuItem Header="粘贴(_P)" InputGestureText="Ctrl+V" Command="{x:Static commands:EditCommands.Paste}" />
				<Separator />
				<MenuItem Header="查找(_F)" InputGestureText="Ctrl+F" Command="{x:Static commands:EditCommands.Find}" />
				<MenuItem Header="替换(_H)" InputGestureText="Ctrl+H" Command="{x:Static commands:EditCommands.Replace}" />
			</MenuItem>
			<MenuItem Header="_视图(_V)">
				<MenuItem Header="侧边栏显示/隐藏" Command="{x:Static commands:ViewCommands.ToggleSidebar}" />
				<MenuItem Header="工具栏显示/隐藏" Command="{x:Static commands:ViewCommands.ToggleToolbar}" />
				<MenuItem Header="状态栏显示/隐藏" Command="{x:Static commands:ViewCommands.ToggleStatusBar}" />
				<Separator />
				<MenuItem Header="全屏模式" InputGestureText="F11" Command="{x:Static commands:ViewCommands.Fullscreen}" />
			</MenuItem>
			<MenuItem Header="_工具(_T)">
				<MenuItem Header="设置" InputGestureText="Ctrl+," Command="{x:Static commands:ToolsCommands.OpenSettings}" />
				<MenuItem Header="AI模型管理" Command="{x:Static commands:ToolsCommands.ManageAIModels}" />
				<MenuItem Header="知识库管理" Command="{x:Static commands:ToolsCommands.ManageKnowledgeBase}" />
				<MenuItem Header="分析报告" Command="{x:Static commands:ToolsCommands.ShowAnalysisReport}" />
			</MenuItem>
			<MenuItem Header="_帮助(_H)">
				<MenuItem Header="用户手册" Command="{x:Static commands:HelpCommands.OpenUserGuide}" />
				<MenuItem Header="关于" InputGestureText="Ctrl+Shift+A" Command="{x:Static commands:HelpCommands.About}" />
				<MenuItem Header="检查更新" Command="{x:Static commands:HelpCommands.CheckUpdates}" />
				<MenuItem Header="反馈建议" Command="{x:Static commands:HelpCommands.Feedback}" />
			</MenuItem>
		</Menu>
	</Grid>
</UserControl>
